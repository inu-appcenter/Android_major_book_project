<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="198dp"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="383dp"
        android:src="@drawable/inu_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="아이디"
        android:paddingStart="16dp"
        android:layout_marginTop="45dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/pwInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:hint="패스워드"
        android:paddingStart="16dp"
        android:layout_marginTop="15dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/idInputEditText" />

    <TextView
        android:id="@+id/logInBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pwInputEditText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pwInputEditText"
        app:layout_constraintTop_toBottomOf="@id/pwInputEditText"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/rememberMeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="자동로그인"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwInputEditText" />

    <TextView
        android:id="@+id/rememberIdBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 저장"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/rememberMeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rememberMeBtn"
        android:layout_marginEnd="56dp"
        app:layout_constraintTop_toBottomOf="@+id/pwInputEditText" />

    <TextView
        android:id="@+id/nonMemberBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비회원 사용"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/rememberMeBtn"
        app:layout_constraintStart_toEndOf="@id/rememberMeBtn"
        android:layout_marginStart="56dp"
        app:layout_constraintTop_toBottomOf="@+id/pwInputEditText" />

    <View
        android:layout_width="0.8dp"
        android:background="@color/gray4"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/rememberMeBtn"
        app:layout_constraintStart_toEndOf="@id/rememberIdBtn"
        app:layout_constraintTop_toTopOf="@id/rememberMeBtn"
        app:layout_constraintBottom_toBottomOf="@id/rememberMeBtn" />

    <View
        android:layout_width="0.8dp"
        android:background="@color/gray4"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/nonMemberBtn"
        app:layout_constraintStart_toEndOf="@id/rememberMeBtn"
        app:layout_constraintTop_toTopOf="@id/rememberMeBtn"
        app:layout_constraintBottom_toBottomOf="@id/rememberMeBtn" />


</androidx.constraintlayout.widget.ConstraintLayout>