<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccountActivity">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/Widget.App.ActionMode"
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/contextual_action_bar"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24"
        app:title="회원가입"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TextAppearance.MyApp.Headline1" />


    <TextView
        android:id="@+id/text_name"
        style="@style/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="이름"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar" />

    <EditText
        android:id="@+id/editText_inputName"
        style="@style/signInEditText"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_gray3_5dp"
        android:ems="10"
        android:fontFamily="@font/pretendard_light"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName"
        android:letterSpacing="-0.02"
        android:paddingStart="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <EditText
        style="@style/signInEditText"
        android:id="@+id/editText_inputId"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_gray3_5dp"
        android:ems="10"
        android:hint="인천대학교 포탈 아이디를 입력하세요"
        android:inputType="textPersonName"
        android:letterSpacing="-0.02"
        android:paddingStart="16dp"
        app:layout_constraintEnd_toEndOf="@+id/editText_inputName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        style="@style/signInEditText"
        android:id="@+id/editText_inputPassword"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_gray3_5dp"
        android:ems="10"
        android:hint="인천대학교 포탈 비밀번호를 입력하세요"
        android:inputType="textPersonName"
        android:letterSpacing="-0.02"
        android:paddingStart="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/editText_inputName"
        app:layout_constraintStart_toStartOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView"
        style="@style/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="학과"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_inputName" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/spinnerView"
        style="@style/signInEditText"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/spinner_main_background_closed"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:hint="단과대"
        android:lineSpacingExtra="-3sp"
        android:paddingStart="12dp"
        android:paddingEnd="15dp"
        android:textColorHint="@color/gray4"
        app:layout_constraintEnd_toStartOf="@id/spinnerView2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:spinner_arrow_animate="true"
        app:spinner_arrow_gravity="end"
        app:spinner_arrow_padding="0dp"
        app:spinner_arrow_tint="@color/gray3"
        app:spinner_item_array="@array/spinner_account_screen_school"
        app:spinner_item_height="46dp"
        app:spinner_popup_animation="normal"
        app:spinner_popup_background="@drawable/spinner_main_background_closed"
        app:spinner_popup_elevation="14dp"
        app:spinner_popup_max_height="322dp"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/spinnerView2"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/line_gray2_5dp"
        android:fontFamily="@font/pretendard_light"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:hint="학과"
        android:letterSpacing="-0.02"
        android:paddingStart="12dp"
        android:paddingEnd="15dp"
        android:textColor="@color/gray4"
        android:textColorHint="@color/gray2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/spinnerView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:spinner_arrow_animate="true"
        app:spinner_arrow_gravity="end"
        app:spinner_arrow_padding="0dp"
        app:spinner_arrow_tint="@color/gray2"
        app:spinner_item_array="@array/spinner_account_screen_school_major"
        app:spinner_item_height="46dp"
        app:spinner_popup_animation="normal"
        app:spinner_popup_background="@drawable/spinner_main_background_closed"
        app:spinner_popup_elevation="14dp"
        app:spinner_popup_max_height="322dp"
        tools:ignore="HardcodedText,UnusedAttribute" />


    <TextView
        android:id="@+id/textView6"
        style="@style/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="아이디(학번)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerView" />

    <TextView
        android:id="@+id/textView7"
        style="@style/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="비밀번호를 입력하세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_inputId" />

    <Button
        android:id="@+id/btn_authenticate"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:fontFamily="@font/pretendard_medium"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/iris_80_5dp_bg"
        android:enabled="true"
        android:text="재학생 인증"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_inputPassword" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:letterSpacing="-0.03"
        android:fontFamily="@font/pretendard_light"
        android:text="회원가입시 수집한 개인정보는 재학생 인증에만 사용됩니다."
        android:textColor="@color/gray4"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/text_name"
        app:layout_constraintTop_toBottomOf="@+id/btn_authenticate" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_gray3_5dp"
        android:backgroundTint="@color/gray3"
        android:fontFamily="@font/pretendard_medium"
        android:letterSpacing="-0.02"
        android:text="가입완료"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>